{
    "manifest_version": 2,
    "name": "Facebook Painter",
    "description": "Facebook Painter can be use to customize Facebook appearance.",
    "version": "1.0",
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [{
      "matches":["https://www.facebook.com/*"],
      "js": ["inject.js"],
      "run_at" : "document_end"
    }],
    "permissions": [
      "tabs"
    ],
    "web_accessible_resources": ["popup.js", "inject.js"]
}
